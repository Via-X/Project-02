<h1>Dashboard</h1>

<hr />
<div class="crypto">
  <span id="btc">
    <h3>Bitcoin</h3>
    <h3 id="btc-price">00.00</h3>
  </span>

  <span id="eth">
    <h3>Ethereum</h3>
    <h3 id="eth-price">00.00</h3>
  </span>

  <span id="sol">
    <h3>Solana</h3>
    <h3 id="sol-price">00.00</h3>
  </span>

  <span id="link">
    <h3>Chainlink</h3>
    <h3 id="link-price">00.00</h3>
  </span>

  <span id="xrp">
    <h3>XRP</h3>
    <h3 id="xrp-price">00.00</h3>
</span>
</div>

<hr />

<div>
  <a href="/{{dbUser._id}}">
    <h3>{{dbUser.username}}</h3>
  </a>
  <h6>email: {{dbUser.email}}</h6>
  {{!-- <h6>Admin Role: {{dbUser.admin}}</h6>
  <h6>User Role: {{dbUser.user}}</h6>
  <h6>Guest Role: {{dbUser.guest}}</h6> --}}



  {{#each dbUser.wallets}}
   
    <div id="index-{{@index}}">
       <hr />
      <span>{{@index}}</span>
      <h6>Crypto:
        <span data-theIndex="{{@index}}">{{this.cryptoName}}</span>
        <button class="button" id="edit-crypto">Edit</button>
      </h6>

      <h6>
        Exchange:
        <span>{{this.exchangeName}}</span>
        <button class="button" id="edit-exchange">Edit</button>
      </h6>

      <h6>
        Amount:
        <span>{{this.amount}}</span>
        <button class="button" id="edit-amount">Edit</button>
      </h6>

      <h6>
        Purchase Price:
        <span>{{this.purchasePrice}}</span>
        <button class="button" id="edit-purchaasPrice">Edit</button>
      </h6>

    </div>
  {{/each}}

  

</div>
<hr />
<a href="/users/{{dbUser._id}}">Add Wallet</a>

<script src="../js/binance-websocket.js"></script>